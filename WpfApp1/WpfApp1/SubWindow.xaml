<Window x:Class="WpfApp1.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="SubWindow" Height="80" Width="300"
        WindowStyle="None"
        FocusManager.FocusedElement="{Binding ElementName=textBox}">
    <Grid>
        <Button Content=" × " HorizontalAlignment="Right" Margin="0,5,5,0" VerticalAlignment="Top"
                Click="Button_Click" IsCancel="True"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Stretch" Margin="5,30,65,5" Text="Sub Window"
                 VerticalAlignment="Stretch"/>
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="50" Height="30" Margin="0,0,5,5"
                Content="OK" Click="Button_Click_1" IsDefault="True"/>
    </Grid>
</Window>
